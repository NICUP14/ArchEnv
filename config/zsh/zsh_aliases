#!/bin/zsh
# NICUP14's custom zsh alias definitions

# Zsh configuration-related aliases
alias sb='source ~/.zshrc'
alias vb='vim ~/.zshrc'
alias sa='source ~/.zsh_aliases'
alias va='vim ~/.zsh_aliases'
alias sf='source ~/.zsh_functions'
alias vf='vim ~/.zsh_functions'

# Vim/Nvim configuration-related aliases
alias v='vim'
alias n='nvim'
alias vv='vim ~/.vimrc'
alias vn='vim ~/.config/nvim/init.lua'
alias vk='vim ~/.config/nvim/lua/binds.lua'
alias vp='vim ~/.config/nvim/lua/plugin'

# Trash aliases
alias t='trash'
alias tr='trash-restore'
alias tls='trash-list'

# Arch aliases
alias cd='z'
alias d='doas'
alias q='exit'
alias sudo='doas'
alias sx='startx' # X11 server
alias fx='~/.fbtermrc' # fbterm server
alias enc='gpg -c --cipher-algo AES256'

# ADB
alias pmls='./adb shell pm list packages'
alias pmrm='./adb shell pm disable-user --user 0'
alias pmadd='./adb shell pm enable'

# GNU coreutils-related aliases
alias rmf='rm -f'
alias rm='rm -vi'
alias mv='mv -vi -S .bak'
alias cp='cp -vi -S .bak'
alias ccp='command cp'
alias ls='ls --color=auto --group-directories-first'
alias la='ls -A'
alias ll='ls -lh'
